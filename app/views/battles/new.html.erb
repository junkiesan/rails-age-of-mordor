<div class="container step-content">
  <% if @players.empty? %>
    <p class="text-transparent">You cannot launch a battle without any players!</p>
    <%= link_to "Create at least two players!", new_player_path %>
  <% elsif @players_count == 1 %>
    <h1>Oh crap!</h1>
    <p class="text-transparent">You cannot launch a battle with only one player!</p>
    You have <%= @players_count %> player!
    <p><%= @players.first.name %></p>
    Create at least <%= link_to "another player", new_player_path %>
  <% else %>
    <h1>Choose two players ğŸ¤</h1>
    <p class="subtitle">Click on the avatar of two players - or <%= link_to "create a new player", new_player_path %>.</p>
    You have <%= @players_count %> players!
    <div class="player-list">
        <% @players.each do |player| %>
          <div class="player-item text-center" data-player-id=<%= "#{player.id}" %>>
            <% if player.avatar_url %>
              <%= cl_image_tag player.avatar, height: 100, width: 100, crop: :thumb, gravity: :face %>
            <% else %>
              <%= image_tag 'avatar.png', class: 'avatar-large' %>
            <% end %>
            <p><%= player.name %></p>
            <p class="text-transparent"><%= player.life_points %> <i class="fas fa-heart"></i></p>
          </div>
        <% end %>
      </div>
      <%= simple_form_for(@battle) do |f| %>
      <%= f.input :player_1_id, as: :hidden, error: false %>
      <%= f.input :player_2_id, as: :hidden, error: false %>
      <%= f.button :submit %>
    <% end %>
  <% end %>   
</div>